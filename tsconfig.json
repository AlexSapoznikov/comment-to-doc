{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib"
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "**/tests/*"]
}
